<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="a39.apps.monyabhai.gograbcapture">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <application android:theme="@style/AppTheme"
        android:label="@string/app_name"
        android:name=".GoGrabCapture"
        android:icon="@drawable/applogo_cropped_updated"
        android:supportsRtl="true"
        android:roundIcon="@drawable/applogo_cropped_updated">

        <activity
            android:name="a39.apps.monyabhai.gograbcapture.MainActivity" />
        <activity
            android:name="a39.apps.monyabhai.gograbcapture.SignUpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="a39.apps.monyabhai.gograbcapture.MainActivity" />

        <activity android:name="a39.apps.monyabhai.gograbcapture.HomeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:theme="@style/Base.Theme.AppCompat" android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.DisplayNameActivity" android:screenOrientation="portrait" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.DiscoverGearTypeActivity" android:screenOrientation="portrait" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.DiscoverGearListActivity" android:screenOrientation="portrait" android:parentActivityName="a39.apps.monyabhai.gograbcapture.DiscoverGearTypeActivity" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.DiscoverServiceTypeActivity" android:screenOrientation="portrait" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.DiscoverServiceListActivity" android:screenOrientation="portrait" android:parentActivityName="a39.apps.monyabhai.gograbcapture.DiscoverServiceTypeActivity" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.YourProductActivity" android:screenOrientation="portrait" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.YourServicesActivity" android:screenOrientation="portrait" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.ProductActivity" android:screenOrientation="portrait" android:parentActivityName="a39.apps.monyabhai.gograbcapture.DiscoverGearListActivity" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.ServiceActivity" android:screenOrientation="portrait" android:parentActivityName="a39.apps.monyabhai.gograbcapture.DiscoverServiceListActivity" />
        <activity android:name="a39.apps.monyabhai.gograbcapture.SearchResultActivity" android:screenOrientation="portrait" />
    </application>
</manifest>
